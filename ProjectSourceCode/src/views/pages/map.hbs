<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Parking Map</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    :root {
      --primary-color: #2c3e50;
      --accent-color: #3498db;
      --bg-color: #ecf0f1;
      --footer-bg: #34495e;
    }

    .footer-buttons .btn.active {
    background-color: #2980b9;
    font-weight: bold;
    border: 2px solid white;
    }

    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: var(--bg-color);
    }

    header {
      background-color: var(--primary-color);
      color: white;
      padding: 20px 0;
    }

    .logo-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .logo-container img {
      height: 50px;
    }

    main {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: var(--bg-color);
      min-height: 400px;
    }

    .map-placeholder {
      font-size: 1.2rem;
      color: #7f8c8d;
    }

    footer {
      background-color: var(--footer-bg);
      padding: 15px 0;
    }

    .footer-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    .footer-buttons .btn {
      background-color: var(--accent-color);
      border: none;
      color: white;
      padding: 10px 25px;
      font-size: 1rem;
      border-radius: 25px;
      transition: background-color 0.3s ease;
    }

    .footer-buttons .btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Header -->
  <header>
    <nav class="navbar position-relative navbar-dark" style="background-color: var(--primary-color);">
      <div class="container position-relative d-flex justify-content-center align-items-center">
        <a class="navbar-brand position-absolute start-0" href="#">
          <img src="../../resources/img/PARKlogo.png" alt="Parking Logo" height="50">
        </a>
        <div class="position-absolute end-0">
          <button class="btn btn-outline-light" onclick="window.location.href='/logout'">Log Out</button>
        </div>
      </div>
    </nav>
  </header>
  

  <!-- Map Area -->
  <main>
    <gmp-map
      center="43.4142989,-124.2301242"
      zoom="4"
      map-id="DEMO_MAP_ID"
      style="height: 400px"
    >
      <gmp-advanced-marker
        position="37.4220656,-122.0840897"
        title="Mountain View, CA"
      ></gmp-advanced-marker>
      <gmp-advanced-marker
        position="47.648994,-122.3503845"
        title="Seattle, WA"
      ></gmp-advanced-marker>
    </gmp-map>
  </main>

  <!-- Footer -->
  <footer>
    <div class="container footer-buttons">
      <button class="btn" onclick="window.location.href='/history'">History</button>
      <button class="btn" onclick="window.location.href='/home'">Home</button>
      <button class="btn btn-outline-light active" onclick="window.location.href='/map'">Map</button>
      <button class="btn" onclick="window.location.href='/account'">Account</button>
    </div>
  </footer>

  <!-- Bootstrap JS (Optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Google Map Script -->
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvSCSPHxSD4mgTplfspCkqlTIX1Qk_X7U&libraries=maps,marker"
    defer
  ></script>
</body>
</html>
