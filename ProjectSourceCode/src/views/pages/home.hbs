{{#extend "layouts/main"}}
  {{#content "main"}}
    <div class="home-container">
      {{! Header with logo }}
      <header class="home-header text-center mb-4">
        <h1 class="app-title">P4RK</h1>
      </header>

      {{! Search bar }}
      <div class="search-container mx-auto mb-5">
        <div class="search-box">
          <input 
            type="text" 
            class="search-input" 
            placeholder="Enter Address or Place..."
          >
          <button class="search-button">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </div>

      <hr class="divider">

      {{! My Passes section }}
      <section class="passes-section mb-5">
        <h2 class="section-title">MY PASSES</h2>
        <h3 class="subsection-title">Where you've parked</h3>
        
        <div class="pass-list">
          {{! These would be dynamic in real app }}
          <div class="pass-item">
            <p class="pass-address">8900 S Ames st, 80303</p>
            <button class="book-again-btn">Book again</button>
          </div>
          <div class="pass-item">
            <p class="pass-address">4500 N Arapahoe Ave, 30432</p>
            <button class="book-again-btn">Book again</button>
          </div>
          <div class="pass-item">
            <p class="pass-address">7101 E Baseline Rd, 80235</p>
            <button class="book-again-btn">Book again</button>
          </div>
        </div>
      </section>

      <hr class="divider">

      {{! Nearby parking section }}
      <section class="nearby-section">
        <h3 class="subsection-title">Find parking where you are</h3>
        <div class="location-group">
          <h4 class="location-title">UNIVERSITY HILL</h4>
          <div class="street-list">
            {{! These would be dynamic in real app }}
            <span class="street-item">11th St</span>
            <span class="street-item">12th St</span>
            <span class="street-item">13th St</span>
            <span class="street-item">14th St</span>
            <span class="street-item">15th St</span>
            {{! Add more as needed }}
          </div>
        </div>
      </section>
    </div>
  {{/content}}

  {{#content "styles"}}
    <style>
      /* Base Styles */
      .home-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
      }

      /* Header Styles */
      .home-header {
        padding: 20px 0;
      }
      .app-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
      }

      /* Search Bar Styles */
      .search-container {
        width: 100%;
      }
      .search-box {
        display: flex;
        border: 1px solid #ddd;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      .search-input {
        flex: 1;
        padding: 12px 20px;
        border: none;
        outline: none;
        font-size: 1rem;
      }
      .search-button {
        background: #3498db;
        color: white;
        border: none;
        padding: 0 20px;
        cursor: pointer;
        font-size: 1.2rem;
      }
      .search-button:hover {
        background: #2980b9;
      }

      /* Divider */
      .divider {
        border: none;
        height: 1px;
        background-color: #eee;
        margin: 25px 0;
      }

      /* Passes Section */
      .section-title {
        font-size: 1.5rem;
        color: #2c3e50;
        margin-bottom: 15px;
      }
      .subsection-title {
        font-size: 1.2rem;
        color: #7f8c8d;
        margin-bottom: 15px;
      }
      .pass-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }
      .pass-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
      }
      .pass-address {
        margin: 0;
        color: #2c3e50;
      }
      .book-again-btn {
        background: none;
        border: 1px solid #3498db;
        color: #3498db;
        padding: 5px 15px;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.3s;
      }
      .book-again-btn:hover {
        background: #3498db;
        color: white;
      }

      /* Nearby Parking */
      .location-group {
        margin-bottom: 20px;
      }
      .location-title {
        font-size: 1.1rem;
        color: #2c3e50;
        margin-bottom: 10px;
      }
      .street-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
      }
      .street-item {
        background: #e8f4fc;
        color: #2980b9;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.9rem;
      }
    </style>
  {{/content}}

  {{#content "scripts"}}
    {{! Add any necessary JavaScript here }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  {{/content}}
{{/extend}} --}}









