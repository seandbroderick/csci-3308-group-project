  <!-- Nearby Parking Section -->
  <section class="nearby-section">
    <h3 class="subsection-title">Find parking where you are</h3>
    <div class="location-group">
      <h4 class="location-title">UNIVERSITY HILL</h4>
      <div class="street-list">
        <span class="street-badge">13th Street</span>
