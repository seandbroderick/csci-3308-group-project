  <style>
    :root {
      --primary-color: #2c3e50;
      --accent-color: #3498db;
      --bg-color: #ecf0f1;
      --footer-bg: #34495e;
    }

    .footer-buttons .btn.active {
    background-color: #2980b9;
    font-weight: bold;
    border: 2px solid white;
    }

    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: var(--bg-color);
    }

    header {
      background-color: var(--primary-color);
      color: white;
      padding: 20px 0;
    }

    .logo-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .logo-container img {
      height: 50px;
    }

    main {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: var(--bg-color);
      min-height: 400px;
    }

    .map-placeholder {
      font-size: 1.2rem;
      color: #7f8c8d;
    }

    footer {
      background-color: var(--footer-bg);
      padding: 15px 0;
    }

    .footer-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    .footer-buttons .btn {
      background-color: var(--accent-color);
      border: none;
      color: white;
      padding: 10px 25px;
      font-size: 1rem;
      border-radius: 25px;
      transition: background-color 0.3s ease;
    }

    .footer-buttons .btn:hover {
      background-color: #2980b9;
    }
  </style>